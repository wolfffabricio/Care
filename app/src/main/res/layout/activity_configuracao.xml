<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.example.gocode.care.activities.ConfiguracaoActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbSetting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSeguirPessoas"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="SEGUIR PESSOAS"
                android:textColor="#4e4e4e"
                android:textSize="18sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btEncontrarContatos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Encontrar contatos"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btConvidarAmigos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Convidar amigos"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tvConta"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="CONTA"
                android:textColor="#4e4e4e"
                android:textSize="18sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btEditarPerfil"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Editar Perfil"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btAlterarSenha"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Alterar senha"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tvSuporte"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="SUPORTE"
                android:textColor="#4e4e4e"
                android:textSize="18sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btCentralDeAjudaDoCare"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Central de Ajuda do Care"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btRelatarUmProblema"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Relatar um problema"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tvSobre"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Sobre"
                android:textColor="#4e4e4e"
                android:textSize="18sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btQuemSomosNos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Quem Somos Nós"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btPoliticaDePrivacidade"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Política de Privacidade"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btTermosDeServico"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Termos de Serviços"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btSair"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Sair"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/grey" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>

