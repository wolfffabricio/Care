<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.example.gocode.care.activities.ConfiguracaoActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbSettingEss"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRedefinirSenhaEss"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="REDEFINIR SENHA"
                android:textColor="#4e4e4e"
                android:textSize="18sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.8dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btUsuarioOuEmailEss"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Com nome de usuÃ¡rio ou e-mail"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btSmsEss"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Com SMS"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

            <Button
                android:id="@+id/btGoogleEss"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Com o Google+"
                android:textAllCaps="false"
                android:textColor="#4e4e4e"
                android:textSize="15sp" />

            <View
                android:layout_width="330dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="@color/grey" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>