<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.gocode.care.activities.LoginActivity">


        <com.google.android.gms.common.SignInButton
            android:id="@+id/btSignInCustom"
            android:layout_width="@dimen/bt_gmail_layout_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_top__bt_gmail__tv_escolha_de_conta__etEmail" />

        <!--<Button-->
        <!--android:layout_width="@dimen/bt_gmail_layout_width"-->
        <!--android:layout_height="@dimen/bt_gmail_layout_height"-->
        <!--android:id="@+id/btGmail"-->
        <!--style="@style/btGmail" />-->

        <TextView
            android:id="@+id/tvEscolhaDeConta"
            style="@style/tvEscolhaDeConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etSenha"
            style="@style/etSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btEntrar"
            style="@style/btEntrar"
            android:layout_width="@dimen/bt_gmail_layout_width"
            android:layout_height="@dimen/bt_gmail_layout_height" />

        <Button
            android:id="@+id/btEsqueceuSenha"
            style="@style/btEsqueceuSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btRegistrar"
            style="@style/btRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>